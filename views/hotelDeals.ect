<html>

<head>
    <link rel="stylesheet" href="css/deals.css">
     <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,600' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/font-awesome.css">
    <link rel="stylesheet" href="css/icomoon.css">
    <link rel="stylesheet" href="css/styles.css">


     <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
      <script src="https://code.jquery.com/jquery-1.12.4.js"> </script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</head>

<body>
    <script type="text/javascript" src="js/inputScript.js"></script>

    <div id="header">
        <font style="color: white; align-content: center;"><b>Hotel Express</b></font>
    </div>
<div id="main-wrap">
    <div id="sidebar">
        <div style="float: left; margin-top: 5px; margin-left: 5px;">
        <form action="/" method="POST" enctype="mutlipart/form-data">
        <p>Destination: <input id="cities" type="text" name="cityName" autofocus /> </p>
        <p>Check-in Date: <input type="text" id="checkinDatePicker" name="checkinDate"></p>
        <p>Length of stay: <input type="text" id="stepper" name="length"> day(s)</p>
        <p>Minumum star Rating: <select id="rating" name="minRating">
                      <option value="1">1</option>
                      <option value="2">2</option>
                      <option value="3">3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
        </select>
        </p>

    <input type="submit" class="btn btn-primary"" />
</form>
    </div>
    </div>
        
    <div  id="content-wrap"> <!--style="width: 60%; height:100%; margin: auto; overflow: auto;" -->
    <% if @deals?.length : %>
            <% for deal in @deals : %>

            <a class="booking-item" href="#">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="booking-item-img-wrap">
                                            <img src="<%- deal.hotelInfo.hotelImageUrl %>" alt="Image Alternative text" title="The pool" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="booking-item-rating">
                                            <ul class="icon-group booking-item-rating-stars">
                                                <% for num in [1..deal.hotelInfo.hotelStarRating] : %>
                                                <li><i class="fa fa-star"></i>
                                                </li>
                                                <% end %>
                                            </ul> <small>Guest Review:</small> <span class="booking-item-rating-number"><%= deal.hotelInfo.hotelGuestReviewRating %> of 5</span>
                                        </div>
                                        <h5 class="booking-item-title"><%= deal.hotelInfo.hotelName %></h5>
                                        <p class="booking-item-address"><i class="fa fa-map-marker"></i><%= deal.hotelInfo.hotelStreetAddress %>, <%= deal.hotelInfo.hotelCity %>, <%= deal.hotelInfo.hotelProvince %></p>
                                        <h5 class="booking-item-title"><%= deal.hotelInfo.description %></h5>
                                    </div>
                                    <div class="col-md-3"><span class="booking-item-price">$<%= deal.hotelPricingInfo.originalPricePerNight %></span><span>/night</span><span class="btn btn-primary">Book Now</span>
                                    <br/><span>Viewers: <%= deal.hotelUrgencyInfo.numberOfPeopleViewing %> </span>
                                    </div>
                                </div>
                            </a>
                <br/> 
            <% end %>
    <% else : %>
        <p>List is empty</p>
    <% end %>
    </div> 
    </div>
<div id="footer">Footer</div>
</body>

</html>
